{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/__tests__/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
